# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key
HF_TOKEN=your_huggingface_token

# Ollama Configuration
OLLAMA_ENABLED=true
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3
OLLAMA_VISION_MODEL=llava

# Video Processing Configuration
DEFAULT_LANGUAGE=Hebrew
FRAME_INTERVAL=5             # Reduced interval for more frequent sampling
DETECT_SCENES=true           # Enable scene detection to avoid duplicate frames
SCENE_THRESHOLD=20.0         # Lower threshold = more sensitive to changes
MIN_SCENE_DURATION=1.0       # Minimum seconds between detected scenes
ENABLE_OCR=true
START_TIME=0.0
END_TIME=0.0
MISSION=general
GENERATE_FLOWCHART=false
MAX_BATCH_SIZE_MB=10.0
MAX_IMAGES_PER_BATCH=15
BATCH_OVERLAP_FRAMES=2
